{% extends 'base.html.twig' %}

{% block title %}Ajouter une adresse{% endblock %}

{% block body %}
 <div class="container mt-5">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <div class="card">
         <div class="card-header">
            <h5 class="card-title">Ajouter une adresse</h5>
          </div>
          <div class="card-body">
         
    {{ form_start(form) }}
    <div class="mb-3"> 
    <div class="row">
      <div class="col">
        {{ form_row(form.nom, {'label':'Nom','attr':{'placeholder' : 'Nom'}}) }}
      </div>
      <div class="col">  
        {{ form_row(form.prenom, {'label':'Prenom','attr':{'placeholder' : 'Prenom'}}) }}
      </div>
    </div>
    </div>
    <div class="mb-3">
    {{ form_row(form.titre, {'label':'Titre','attr':{'placeholder' : 'titre'}}) }}
     </div>
     <div class="mb-3">
    {{ form_row(form.company, {'label':'Nom de l\'entreprise(si vous en avez)','attr':{'placeholder' : 'Nom de l\'entreprise'}}) }}
     </div>
     <div class="mb-3">
    {{ form_row(form.phone, {'label':'Numero de telephone','attr':{'placeholder' : 'Numero de telephone'}}) }}
    </div>
     <div class="mb-3">
    {{ form_row(form.address, {'label':'Adresse','attr':{'placeholder' : 'Adresse'}}) }}
     </div>
     <div class="mb-3">
    {{ form_row(form.postalcode, {'label':'Code postal','attr':{'placeholder' : 'Code postal'}}) }}
    </div>
    <div class="mb-3">
    {{ form_row(form.country, {'label':'Pays','attr':{'placeholder' : 'Pays'}}) }}
    </div>
    <div class="mb-3">
    {{ form_row(form.city, {'label':'Ville','attr':{'placeholder' : 'Ville'}}) }}
    </div>
     <div class="mb-3">
     {{ form_label(form.user, null, { 'label_attr': { 'class': 'hidden-label' } }) }} {# Masquer le label avec CSS #}
    {{ form_widget(form.user, { 'attr': { 'class': 'hidden-field' } }) }} 
    </div>
    <div class="d-grid gap-2">
      <button type="submit" class="btn btn-dark">Confirmer l'inscription</button>
    </div>
    {{ form_end(form) }}
    </div>
</div>
</div>
</div>
</div>
<br />
<br />
