{% extends 'base.html.twig' %}


{% block body %}
<form action="{{ path('card_add', {'id' : produit.id}) }}">
<div class="card">
    <img src="{{ produit.image }}" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title">{{ produit.nom }}</h5>
      <p class="card-text">{{ produit.description }}</p>
      <p class="card-text">{{ (produit.prix / 100) | number_format(2,',','.') }}$</p>
      <p class="card-text">
                <small class="text-body-secondary">
                Ecrit le {{ produit.dateCreation | date('d/m/Y') }} a
                {{ produit.dateCreation | date('H:i') }}
                </small>
      </p>
      <button type="submit" class="btn btn-primary">Faire une enchere</button>
    </div>
</div>
</form>
<br />
{% endblock %}